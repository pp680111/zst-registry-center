<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.zst.registrycenter.health.cluster.DefaultClusterHealthChecker" level="debug" />
    <logger name="com.zst.registrycenter.cluster.ClusterSynchronizer" level="debug" />
    <logger name="com.zst.registrycenter.service.DefaultRegistryService" level="debug" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>